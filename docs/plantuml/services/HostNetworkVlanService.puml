!include ../dto/HostNetworkVlan/HostNetworkVlanUpdateDto.puml
!include ../managers/HostNetworkManager.puml

package app {
    class HostNetworkVlanService {
        -manager IHostNetworkManager
        --
        +GetList() ([]HostNetworkVlanDto, error)
        --
        +GetByName(name string) (HostNetworkVlanDto, error)
        --
        +Create(createDto HostNetworkVlanCreateDto) (HostNetworkVlanDto, error)
        --
        +Update(name string, updateDto HostNetworkVlanUpdateDto) (HostNetworkVlanDto, error)
